<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeckEditActivity">

    <Button
        android:id="@+id/edit_lesson"
        android:layout_width="225dp"
        android:layout_height="72dp"
        android:layout_marginTop="132dp"
        android:onClick="buttonLessonEditClicked"
        android:text="Lektion Bearbeiten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/add_Card"
        android:layout_width="225dp"
        android:layout_height="72dp"
        android:onClick="buttonAddCardClicked"
        android:text="Karteikarte hinzufügen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_lesson"
        app:layout_constraintVertical_bias="0.098" />

    <Button
        android:id="@+id/delete_Card"
        android:layout_width="225dp"
        android:layout_height="72dp"
        android:onClick="buttonDeleteCardClicked"
        android:text="Karteikarte löschen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_Card"
        app:layout_constraintVertical_bias="0.108" />

    <Button
        android:layout_width="225dp"
        android:layout_height="72dp"
        android:onClick="buttonDeleteLesson"
        android:text="Lektion löschen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_Card"
        app:layout_constraintVertical_bias="0.203" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="228dp"
        android:layout_height="44dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edit_lesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>